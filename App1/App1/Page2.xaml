<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="subjectPicker" ItemsSource="{Binding Subject}" ItemDisplayBinding="{Binding Name}">
            </Picker>
            <Entry Keyboard="Numeric" Placeholder="Mark" x:Name="markEntry"></Entry>
            <Entry Keyboard="Numeric" Placeholder="Impact" x:Name="impactEntry"></Entry>
            <Button Text="add mark" Clicked="Button_Clicked"></Button>
            <Label x:Name="progress_label"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>